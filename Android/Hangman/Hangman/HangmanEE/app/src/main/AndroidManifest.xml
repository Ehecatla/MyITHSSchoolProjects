<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.homework.ellaeinarsen.hangmanee" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/GrayActionBarTheme" >

        <activity
            android:name="com.homework.ellaeinarsen.hangmanee.MainMenuActivity"
            android:label="@string/menu_activity_display_message">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.homework.ellaeinarsen.hangmanee.AboutActivity"
            android:label="@string/about_activity_display_message">
            <meta-data
               android:name="android.support.PARENT_ACTIVITY"
                android:value="com.homework.ellaeinarsen.hangmanee.MainMenuActivity"/>
        </activity>

        <activity
            android:name="com.homework.ellaeinarsen.hangmanee.GameActivity"
            android:label="@string/game_activity_display_message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.homework.ellaeinarsen.hangmanee.MainMenuActivity"/>
        </activity>

        <activity
            android:name="com.homework.ellaeinarsen.hangmanee.ResultActivity"
            android:label="@string/result_activity_display_message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.homework.ellaeinarsen.hangmanee.MainMenuActivity"/>
        </activity>

    </application>

</manifest>
